<div id="tasks">
  <header>
      <h2 id="date"><%= Date.today %></h2>
      <p id="task-count"></p>
        Total <%= @tasks.count %> Tasks Bellow:
      <%= render 'form', task: Task.new %>
  </header>
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

